<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_name_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="相机1播放地址"
            android:background="@drawable/edit_background"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/text_yellow"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/setting_edittxt_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/edit_background"
            android:gravity="center_horizontal|center_vertical"
            android:singleLine="true"
            android:textColor="@color/text_yellow"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_name_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edit_background"
            android:gravity="center_horizontal|center_vertical"
            android:text="相机2播放地址"
            android:textColor="@color/text_yellow"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/setting_edittxt_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/edit_background"
            android:gravity="center_horizontal|center_vertical"
            android:singleLine="true"
            android:textColor="@color/text_yellow"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_name_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="相机3播放地址"
            android:background="@drawable/edit_background"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/text_yellow"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/setting_edittxt_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/edit_background"
            android:gravity="center_horizontal|center_vertical"
            android:singleLine="true"
            android:textColor="@color/text_yellow"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_name_04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="相机4播放地址"
            android:background="@drawable/edit_background"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/text_yellow"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/setting_edittxt_04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/edit_background"
            android:gravity="center_horizontal|center_vertical"
            android:singleLine="true"
            android:textColor="@color/text_yellow"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonTest1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="测试地址1" />

        <Button
            android:id="@+id/buttonTest2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="清空地址" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="保存设置" />

        <Button
            android:id="@+id/buttonDefault"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="恢复默认" />
    </LinearLayout>




</LinearLayout>